<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.filano.sikemastekber.Activity.BluetoothActivity"
    android:background="@color/colorPrimaryDark">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animdone"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_marginBottom="56dp"
            app:lottie_colorFilter="#FFFFFF"/>

        <TextView
            android:id="@+id/tvBt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mencari bluetooth Adapter..."
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:fontFamily="@font/regular"
            android:layout_marginBottom="32dp"/>

        <Button
            android:id="@+id/btnBt"
            android:layout_width="176dp"
            android:layout_height="50dp"
            android:background="@drawable/button_style_disable"
            android:clickable="true"
            android:fontFamily="@font/medium"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="Coba Lagi"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="20sp" />

    </LinearLayout>


</android.support.constraint.ConstraintLayout>
